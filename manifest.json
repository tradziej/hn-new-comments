{
  "manifest_version": 2,
  "name": "Hacker News New Comments Highlighter",
  "version": "0.1",
  "description": "Track and highlight new comments at Hacker News",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://news.ycombinator.com/item?*"
      ],
      "css": [
        "styles/main.css"
      ],
      "js": [
        "js/injected.js"
      ]
    }
  ]
}