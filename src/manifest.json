{
  "manifest_version": 2,
  "name": "HN New Comments Highlighter",
  "version": "0.1",
  "description": "Track and highlight new comments at Hacker News",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "options_page": "options/index.html",
  "options_ui": {
    "page": "options/index.html",
    "open_in_tab": false
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://news.ycombinator.com/item?*"
      ],
      "css": [
        "content.css"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}